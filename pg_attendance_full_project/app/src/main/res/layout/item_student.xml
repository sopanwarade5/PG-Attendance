<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp">
    <TextView android:id="@+id/tvName" android:layout_width="match_parent" android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16sp" />
    <TextView android:id="@+id/tvMobile" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="14sp" />
    <TextView android:id="@+id/tvRoom" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="14sp" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="8dp">
        <Button android:id="@+id/btnPresent" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Present" />
        <Button android:id="@+id/btnEdit" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Edit" />
        <Button android:id="@+id/btnDelete" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Delete" />
    </LinearLayout>
</LinearLayout>
